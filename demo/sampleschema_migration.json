{
	"$schema": "http://json-schema.org/draft-04/hyper-schema#",
	"type": "object",
	"properties": {
		"firstName": {
			"type": "string",
			"minLength": 2,
			"maxLength": 40,
			"title": "First name",
			"description": "First name"
		},
		"lastName": {
			"type": "string",
			"minLength": 2,
			"maxLength": 40,
			"title": "Last name",
			"description":"Last name"
		},
		"bornOn": {
			"type": "string",
			"format": "date-time",
			"widget": "date",
			"placeholder": "Ex: 2009-03-11",
			"description": "Born on"
		},
		"favoriteColor": {
			"type": "string",
			"pattern":"^#[0-9]{6}$",
			"widget":"color",
			"description": "Favorite color"
		},
		"transactionNumber": {
			"type": "integer",
			"description":"Transaction number"
		},
		"transactionDescription": {
			"type": "string",
			"widget": "textline",
			"description": "What is being transacted"
		},
		"category": {
			"widget": "select",
			"oneOf": [{
				"title":"Design",
				"value":"design"
			},
			{
				"title":"High-Tech",
				"value":"hightech"
			},
			{
				"title": "Materials",
				"value": "materials"
			},
			{
				"title": "Services",
				"value": "services"
			}],
			"description": "Category"
		},
		"promotion": {
			"description": "Promotion",
			"widget": "radio",
			"oneOf": [{
				"description":"Student discount (20%)",
				"value":"student"
			},
			{
				"description":"Summer 2016 discount (15%)",
				"value":"summer"
			}]
		},
		"confirmationMail": {
			"type":"string",
			"widget":"checkbox"
		},
		"password": {
			"type":"string",
			"widget":"password"
		}
	},
	"links": [
	{
		"title": "Send",
		"description": "Send the transaction",
		"href": "#send",
		"method": "POST",
		"rel": "action"
	},
	{
		"title": "Cancel",
		"description": "Cancel the transaction",
		"href": "#cancel",
		"rel": "action"
	}],
	"fieldsets":[
	{
		"id": "part_1",
		"title": "Part 1 - Registration",
		"fields":[ "firstName", "lastName", "bornOn","favoriteColor"]
	},
	{
		"id": "part_2",
		"title": "Part 2 - Transaction",
		"fields":["transactionNumber", "transactionDescription","promotion","category","password"]
	}],
	"required": ["firstName", "lastName", "transactionNumber"]
}
