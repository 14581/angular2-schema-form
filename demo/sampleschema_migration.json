{
	"$schema": "http://json-schema.org/draft-04/hyper-schema#",
	"type": "object",
	"properties": {
		"firstName": {
			"type": "string",
			"minLength": 2,
			"title": "First name",
			"description": "First name"
		},
		"lastName": {
			"type": "string",
			"minLength": 2,
			"title": "Last name",
			"description":"Last name"
		},
		"bornOn": {
			"type": "string",
			"format": "date-time",
			"description": "Born on"
		},
		"transactionNumber": {
			"type": "integer",
			"description":"Transaction number"
		},
		"transactionDescription": {
			"type": "string",
			"widget": "textarea",
			"description": "What is being transacted"
		}
	},
	"links": [
	{
		"title": "Send",
		"description": "Send the transaction",
		"href": "#send",
		"method": "POST",
		"rel": "action"
	},
	{
		"title": "Cancel",
		"description": "Cancel the transaction",
		"href": "#cancel",
		"rel": "action"
	}],
	"fieldsets":[
	{
		"id": "part_1",
		"title": "Part 1 - Registration",
		"fields":[ "firstName", "lastName", "bornOn"]
	},
	{
		"id": "part_2",
		"title": "Part 2 - Transaction",
		"fields":["transactionNumber", "transactionDescription"]
	}],
	"required": ["firstName", "lastName", "transactionNumber"]
}
