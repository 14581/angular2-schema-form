{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"outDir":"dist/",
		"declaration": true,
		"noEmitHelpers": true,
		"strictNullChecks": false
	},
	"awesomeTypescriptLoaderOptions": {
		"useWebpackText": true,
		"forkChecker": true
	},
	"include": [
		"src",
		"demo"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": { "rewriteTsconfig": false }
}
